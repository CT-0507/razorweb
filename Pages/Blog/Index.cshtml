@page
@model ex.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Blogs";
    int i = 0;
}

@* @Url.Page("/Blog/Index", new {abc = 1, p = 10}) *@



<h1>Danh sách bài viết</h1>
<form method="get" asp-page="./Index">
    <label for="SearchString">Tìm kiếm</label>
    <input name="SearchString" id="SearchString" value="" />
    <button type="submit">Tìm</button>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Blog</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Article[0].Content) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        
        <tr>
            <td>
                @(++i)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Content) *@
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Xem</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>


@{
    var pagingmodel = new ex.Helpers.PagingModel()
    {
        currentPage = Model.currentPage,
        countPages = Model.countPages,
        generateUrl = (int? p) => Url.Page("/Blog/Index", new {p = p})
    };
}

<partial name="_Paging" model="@pagingmodel"/>